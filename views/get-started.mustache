  <!-- ======= Intro Section ======= -->
  <section id="get-started-form" class="animated fadeInLeft">

    <p>
        {{#rows}}
        <ul>
            <li>{{fromlanguage}}</li>
            <li>{{tolanguage}}</li>
            <li>{{context}}</li>
            <li>{{deliverydate}}</li>
            <li>{{filename}}</li>
        </ul>

        {{/rows}}
    </p>
    
   <form  method="post" class="form" id="form" enctype="multipart/form-data">

    <div class="container-fluid py-3 get-started-form" style="width:95%;margin:auto;">
       <div class="row">
           <div class="form-group col-lg-6">
            <label for="fromLanguage">From</label>
	        <select name="fromLanguage" id="fromLanguage" class="form-control select2">
	           <option>English (GB)</option> 
	           <option>Yoruba</option> 
	           <option>French</option> 
	           <option>Japanese</option> 
	           <option>Chinese</option> 
	           <option>Spanish</option> 
	        </select>
           </div>

           <div class="form-group col-lg-6">
            <label for="toLanguage">To</label>
	        <select name="toLanguage" id="toLanguage" class="form-control select2">
	           <option>English (GB)</option> 
	           <option>Yoruba</option> 
	           <option>French</option> 
	           <option>Japanese</option> 
	           <option>Chinese</option> 
	           <option>Spanish</option> 
	        </select>
           </div>
       </div>

       <div class="row">
        <div class="form-group col-lg-6">
         <label for="context">Context</label>
         <select name="context" id="context" class="form-control select2">
            <option>General</option> 
            <option>Technology</option> 
            <option>Accounting & Finance</option> 
            <option>Politics</option> 
            <option>Education</option> 
            <option>Artificial Intelligence</option> 
            <option>Science</option>
            <option>Art</option>
            <option>Engineering</option>
         </select>
        </div>

        <div class="form-group col-lg-6">
            <label for="datetimepicker">Delivery Date</label>
            <input id="datetimepicker" type="text" class="form-control delivery-date" name="deliveryDate" placeholder="Delivery Date" autocomplete="off">
        </div>
        
        </div>

           <div class="row">
               <div class="col-lg-12">
                   <div class="form-group file">
                   <label for="fileUpload" class="file-label"> <span class="fa fa-upload"></span> 
                    <span class="label-text">Select files to Upload</span></label>
                <input type="file" name="fileUpload" id="fileUpload" multiple="true">
                </div>
               </div>
           </div>


          <button type="submit" formaction="/generate-prices" class="btn btn-block bg-blue my-3 p-2 generate-prices" id="generate-prices">
              <span class="loading-spin fa fa-spinner fa-spin" id="fa-spin"></span> 
              <span id="generate-text">Generate Prices</span>

              </button>
       
   </div>

   
{{#show}}
    <div class="container my-3 text-center">
        <div class="row">

<!-- Card #1, Starter -->
            <div class="col-lg-4 col-md-6 col-sm-10 pb-4 d-block m-auto">
                <div class="pricing-item" style="box-shadow: 0px 0px 30px -7px rgba(0,0,0,0.29);">
                    <!-- Indicator of subscription type -->
                    <div class="pt-4 py-4" style="letter-spacing: 2px">
                        <h4 class="text-blue py-2">Basic</h4>
                    </div>
                    <!-- Price class -->
                    <div class="pricing-price pb-1 text-primary color-primary-text ">
                        <h1 class="text-blue" style="font-weight: 1000; font-size: 3.5em;">
                            <span style="font-size: 20px;">$</span>{{ priceBasic}}
                        </h1>
                        <small class="text-center text-info">${{pricePerWordBasic}}/word</small>
                    </div>
                    <!-- Perks of said subscription -->
                    <div class="pricing-description pb-3">
                        <ul class="list-unstyled mt-3 mb-4">
                            <li class="pl-3 pr-3 text-blue">Basic Translation</li><hr>
                            <li class="pl-3 pr-3 text-blue">No Review</li><hr>
                            <li class="pl-3 pr-3 text-blue">Quality control</li>
                        </ul>
                    </div>
                    <!-- Button -->
                    <div class="pricing-button pb-4">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter" data-plan="Basic" data-price="{{priceBasic}}" data-file="{{filename}}">
                            Order Basic
                          </button>
                    </div>
                </div>
            </div>

<!-- Card #2, Intermediate -->
<div class="col-lg-4 col-md-6 col-sm-10 pb-4 d-block m-auto">
    <div class="pricing-item" style="box-shadow: 0px 0px 30px -7px rgba(0,0,0,0.29);">
        <div class="pt-4 py-4" style="letter-spacing: 2px">
            <h4 class="text-blue py-2">Premium</h4>
        </div>
        <div class="pricing-price pb-1 text-primary color-primary-text ">
