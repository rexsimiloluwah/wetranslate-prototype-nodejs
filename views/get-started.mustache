                <span style="font-size: 20px;">$</span>{{ pricePremium }}
            </h1>
            <small class="text-center text-info">${{pricePerWordProf}}/word</small>
        </div>
        <div class="pricing-description pb-3">
            <ul class="list-unstyled mt-3 mb-4">
                <li class="pl-3 pr-3 text-blue">Premium Translation</li><hr>
                <li class="pl-3 pr-3 text-blue">Light-review</li><hr>
                <li class="pl-3 pr-3 text-blue">Proof-reading</li><hr>
                <li class="pl-3 pr-3 text-blue">Quality control</li>
            </ul>
        </div>

        <div class="pricing-button pb-4">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter" data-plan="Premium" data-price="{{pricePremium}}" data-file="{{filename}}">
                Order Premium
              </button>
        </div>
        
    </div>
</div>
          
<!-- Card #3, Professional -->
    
<div class="col-lg-4 col-md-6 col-sm-10 py-2 d-block m-auto">
    <div class="pricing-item" style="box-shadow: 0px 0px 30px -7px rgba(0,0,0,0.29);">
        <div class="pt-4 py-4" style="letter-spacing: 2px">
            <h4 class="text-blue py-2">Professional</h4>
        </div>
        <div class="pricing-price pb-1 text-primary color-primary-text ">
            <h1 class="text-blue" style="font-weight: 1000; font-size: 3.5em;">
                <span style="font-size: 20px;">$</span>{{ priceProf }}
            </h1>
            <small class="text-center text-info">${{pricePerWordPremium}}/word</small>
        </div>
        <div class="pricing-description pb-3">
            <ul class="list-unstyled mt-3 mb-4">
                <li class="pl-3 pr-3 text-blue">Professional Translation</li><hr>
                <li class="pl-3 pr-3 text-blue">Light-review</li><hr>
                <li class="pl-3 pr-3 text-blue">Quality control</li>
            </ul>
        </div>

        
        <div class="pricing-button pb-4">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter" data-plan="Professional" data-price="{{priceProf}}" data-file="{{filename}}">
                Order Professional
              </button>
        </div>
     
    </div>
</div>

          
        </div></div>
        </div>

        {{/show}}
    </form>
</section><!-- End Intro Section -->



<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" data-backdrop="false">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true" class="fa fa-times"></span>
          </button>
        </div>
        <form action="/pay" method="post">
        <div class="modal-body">
            
          <div class="form-group">
              <label for="selectedPlan">Selected Plan :-</label>
              <input type="text" class="form-control" name="selectedPlan" id="selectedPlan" readonly>
          </div>
          
          <div class="form-group">
            <label for="totalCost">Total Cost :-</label>
            <input type="text" class="form-control" name="totalCost" id="totalCost" readonly>
        </div>

        <div class="form-group">
            <label for="fileName">Filename :-</label>
            <input type="text" class="form-control" name="fileName" id="fileName">
        </div>

        <div class="form-group">
            <label for="useremail">E-mail :-</label>
            <input type="email" class="form-control" name="useremail" id="useremail" placeholder="Please enter your valid E-mail">
        </div>

        <div class="form-group">
            <label for="telephone">Tel. Number :-</label>
            <input type="number" class="form-control" name="telephone" id="telephone" placeholder="i.e 07085140175">
        </div>

        <div class="form-group">
            <label for="notes">Notes for Translator :-</label>
            <textarea type="text" class="form-control" name="notes" id="notes" placeholder="Enter any other further Description..."></textarea>
        </div>
        </div>
        <div class="modal-footer">
            
          <button type="submit" formaction="/pay" formmethod="post" onclick="pay()" id="paybtn" class="btn bg-blue">Complete Order <span class="fa fa-check-circle"></span></button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        
        </div> </form>
    
      </div>
    </div>
  </div>








